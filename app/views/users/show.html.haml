- page_title("Profile")

%h3= _("Profile")

%p
  %strong= _("Name:")
  =h @user.name
%p
  %strong= _("Email:")
  =h @user.email

- if @user.activated_at
  - when_admin do
    %p
      != link_to "edit user's profile", edit_user_path(@user)

  - when_current_user do
    %p
      != link_to _("edit my profile"), edit_profile_path
    %p
      != link_to _("change my password"), password_edit_path
