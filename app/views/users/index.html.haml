- set_tab :users

%h3
  = params[:all] == "true" ? "All Users" : "Users"

%p
  != link_to _("All"), users_path(:all => true)
  \|
  != link_to _("Enabled"), users_path

%table.list
  %tr.title
    %th _("Name")
    %th _("Email")
    %th _("Volunteer")
    %th _("Editor")
    %th _("Admin")
    %th _("Activated")
    %th &nbsp;
    %th &nbsp;
  != render :partial => @users