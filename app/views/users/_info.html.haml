.block
  %h3
    = @user.name + " â€“ "
    = @user.email
    - when_admin do
      != link_to _("edit"), edit_user_path(@user)
  != image_tag(avatar_for(@user, :medium))
  - if @user.avatar? && (current_user == @user || current_user.is_admin?)
    != link_to _("remove avatar"), user_path(@user, :remove_avatar => true), :method => :put, :confirm => I18n.t('gettext.are_you_sure')
  - if @user.on_break
    %br
    %span{:style => 'color:red'}
      = _("on break")
