- page_title("Dashboard")

%h3 Dashboard

- if current_user.might_become_volunteer?
  != button_to "Become Volunteer", new_volunteer_request_path, :method => :get

- if current_user.is_admin?
  != link_to "New Task", new_admin_task_path

!= render(:partial => "tasks/current", :locals => {:tasks => current_user.assigned_tasks.visible_in_my_tasks, :title => "My Tasks"})

- when_editor do
  != render(:partial => "editor_dashboard")