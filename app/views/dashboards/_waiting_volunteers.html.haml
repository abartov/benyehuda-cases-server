- if !@waiting_volunteers.blank? && !@waiting_volunteers_rendered_once
  - @waiting_volunteers_rendered_once = true
  - @vol_rows = 0
  .l
    .holder
      /
        data-table
      %table.data-table
        %tbody
          %tr
            %th.first.style4= I18n.t('gettext.name')
            %th.style3= I18n.t('gettext.email')
            %th.style2= I18n.t('gettext.waits_for')
            %th.first.style1 &nbsp;
          - @waiting_volunteers.each do |v|
            - @vol_rows += 1
            - @theclass = cycle("odd", "even")
            - if @vol_rows == @waiting_volunteers.length
              - @theclass += " last-line"
            %tr{:class => @theclass}
              %td.first.style4!= link_to(v.name, profiles_path(v))
              %td.style3!= mail_to v.email
              %td.style2!= waiting_for_task(v)
              %td.first.style1
                %ul.links
                  %li
                    != link_to_assign_a_task(v)
                  %li
                    %a.delete{ :href => user_path(v)+"/cancel_task_request"}
                      %span
                        = I18n.t('gettext.cancel_request')
  #assign_now{ :title => I18n.t('gettext.assign_a_task_title')}
  :javascript
    jQuery(window).ready(function() {
      jQuery('#assign_now').dialog({draggable:true, modal: true, resizable:true, autoOpen: false, position: ['top', 20], width: 950,buttons: {"#{I18n.t('gettext.cancel')}": function() { $(this).dialog("close"); } } });
    });

