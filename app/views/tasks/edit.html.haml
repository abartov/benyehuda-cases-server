= set_tab :dashboard, false

!= link_to _("back to dashboard"), dashboard_path

!= render(:partial => "description")

- if @no_docs_uploaded
  #no_docs_uploaded.error= _("Did you forget to upload documents?")

!= render(:partial => "documents", :locals => {:documents => @task.documents})

!= render(:partial => "new_document")


!= commentable_event_form("finish")

:javascript
  $(document).ready(function() {
    e = $('#actual_finish_button');
    window.scrollTo(0, e.offset().top);
  });