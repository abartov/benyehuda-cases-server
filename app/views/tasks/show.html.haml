    %img#crop-image{ :style => "display: block; max-width: 100%;" }
  .crop-buttons{ :style => "margin-top: 10px; text-align: center;" }
    %button#download-cropped.purple-button.gradient
      %span= I18n.t('documents.download_cropped_image')
