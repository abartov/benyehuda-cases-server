.block
  != render(:partial => "comments/index", :locals => {:comments => @comments})

- if @task.editor?(current_user)
  .block.prominent
    %h4= _("Editor Actions")
    != render(:partial => "editor_events")

- if @task.assignee?(current_user)
  .block.prominent
    %h4= _("Assignee Actions")
    != render(:partial => "assignee_events")


