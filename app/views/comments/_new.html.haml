= I18n.t('gettext.empty')
= semantic_form_for(@comment ||= Comment.new, :live_validations => false, :url => task_comments_path(@task), :remote => true) do |f|
  = f.inputs do
    != f.input :message, :as => :text, :input_html => {:class => "comment_message #{!@comment.errors.blank? && 'active activated'}"}, :label => I18n.t('gettext.message'), :style => "-webkit-box-sizing: border-box;-moz-box-sizing: border-box;box-sizing: border-box;width: 100%;"
    - when_editor_or_admin do
      != f.input :editor_eyes_only, :label => I18n.t('gettext.editor_eyes_only')
  %div{ :align => :left }
    != f.submit I18n.t('gettext.publish')
    != link_to_function I18n.t('gettext.cancel'), "if (confirm('#{I18n.t('gettext.are_you_sure')}')) {jQuery('#comment_message').val('').removeClass('active').css({height:'30px'});}"
