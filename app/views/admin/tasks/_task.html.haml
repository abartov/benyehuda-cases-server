%tr{:class => cycle("odd", "even")}
  %td= task.id
  %td!= link_to h(task.creator.name), user_path(task.creator)
  %td= task.updated_at.to_s(:db)
  %td!= link_to h(task.name.utf_snippet(30)), task_path(task)
  %td= task.kind
  %td!= link_to h(task.editor.name), user_path(task.editor) if task.editor
  %td!= link_to h(task.assignee.name), user_path(task.assignee) if task.assignee
  %td= textify_state(task.state)
  %td= task.documents.count
  %td!= link_to "Edit", edit_admin_task_path(task)
  %td!= link_to "Assignments", edit_task_assignment_path(task)
