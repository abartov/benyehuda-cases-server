= set_tab :tasks_admin, _("All Tasks")

!= render(:partial => "search")

!= link_to _("New"), new_admin_task_path

- begin
  - unless @tasks.blank?
    %br
    = "סה\"כ: (#{@tasks.respond_to?(:total_entries) ? @tasks.total_entries : @tasks.size})"
    %table.list
      %tr
        %th &nbsp;
        %th= link_to _("Creater"), admin_tasks_path(:order_by => {:includes => "creator", :property => "users.name", :dir => order_direction(params[:order_by].try(:[], :dir))})
        %th= link_to _("Last Updated"), admin_tasks_path(:order_by => {:property => "tasks.updated_at", :dir => order_direction(params[:order_by].try(:[], :dir))})
        %th= link_to I18n.t('gettext.name'), admin_tasks_path(:order_by => {:property => "tasks.name", :dir => order_direction(params[:order_by].try(:[], :dir))})
        %th= link_to 'סוגה', admin_tasks_path(:order_by => {property: "tasks.genre", dir: order_direction(params[:order_by].try(:[],:dir))})
        %th= link_to I18n.t('gettext.kind'), admin_tasks_path(:order_by => {:includes => "kind", :property => "task_kinds.name", :dir => order_direction(params[:order_by].try(:[], :dir))})
        %th= link_to I18n.t('gettext.editor'), admin_tasks_path(:order_by => {:includes => "editor", :property => "users.name", :dir => order_direction(params[:order_by].try(:[], :dir))})
        %th= link_to I18n.t('gettext.assignee'), admin_tasks_path(:order_by => {:includes => "assignee", :property => "users.name", :dir => order_direction(params[:order_by].try(:[], :dir))})
        %th= link_to I18n.t('gettext.state'), admin_tasks_path(:order_by_state => {:dir => order_direction(params[:order_by_state].try(:[], :dir))})
        %th= link_to _("Files"), admin_tasks_path(:order_by => {:property => "tasks.documents_count", :dir => order_direction(params[:order_by].try(:[], :dir))})
        %th &nbsp;
        %th &nbsp;
        %th &nbsp;
        != render(:partial => @tasks)
    != will_paginate(@tasks)
  - else
    %p{:style => 'text-align: center'}
      %big= _("No tasks found corresponding to your request")
- rescue ThinkingSphinx::SphinxError => error
  %h2= "ERROR: #{error}"