!= render(:partial => "tasks/description")

= semantic_form_for(@task, :live_validations => false, :url => task_assignment_path(@task), :method => :put) do |f|
  = f.inputs :name => _("Change Assignments") do
    != f.input :assignee, :as => :select, :collection => User.not_on_break.order("name asc"), :label => _("Assignee")
    != f.input :editor, :as => :select, :collection => User.all_editors.order("users.name"), :label => _("Editor")
  != f.submit _("Assign")
  != link_to _("back to task"), task_path(@task)
